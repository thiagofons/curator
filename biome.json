{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "root": true,
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              {
                "type": false
              }
            ],
            "identifierOrder": "lexicographic"
          }
        },
        "useSortedAttributes": "on",
        "useSortedKeys": "off",
        "useSortedProperties": "on",
        "recommended": true
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "expand": "always",
    "bracketSpacing": true,
    "attributePosition": "multiline",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    },
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "domains": {
      "react": "recommended"
    },
    "rules": {
      "correctness": {
        "useImportExtensions": "off",
        "noUnusedVariables": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      },
      "recommended": true,
      "style": {
        "useComponentExportOnlyModules": "off",
        "useImportType": "on"
      },
      "suspicious": "off"
    }
  },
  "overrides": [
    {
      "linter": {},
      "includes": [
        "packages/**/*.tsx"
      ]
    },
    {
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off"
          }
        }
      },
      "includes": [
        "**/*.astro"
      ]
    },
    {
      "formatter": {
        "lineWidth": 100
      },
      "includes": [
        "**/*.md",
        "**/*.mdx"
      ]
    },
    {
      "linter": {
        "domains": {
          "next": "recommended"
        }
      },
      "includes": [
        "apps/frontend/docs/**",
        "apps/frontend/blog-cms/**"
      ]
    },
    {
      "formatter": {
        "indentStyle": "space",
        "indentWidth": 2
      },
      "includes": [
        "**/package.json"
      ]
    }
  ],
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
