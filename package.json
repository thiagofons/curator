{
  "name": "curator",
  "private": true,
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "// --- Build ---": "",
    "build": "turbo run build --parallel",
    "// --- Docker ---": "",
    "compose:all": "docker compose -f docker-compose.yaml --profile all --env-file=.env.development up -d",
    "compose:all:down": "docker compose -f docker-compose.yaml --profile all --env-file=.env.development down --remove-orphans",
    "compose:core": "docker compose -f docker-compose.yaml --env-file=.env.development  --profile core up -d",
    "compose:core:down": "docker compose -f docker-compose.yaml --env-file=.env.development  --profile core down",
    "compose:observability": "docker compose -f docker-compose.yaml --env-file=.env.development --profile observability up -d",
    "compose:observability:down": "docker compose -f docker-compose.yaml --env-file=.env.development --profile observability down",
    "compose:down": "docker compose -f docker-compose.yaml --env-file=.env.development down --remove-orphans",
    "// --- Database ---": "",
    "db:generate": "turbo run db:generate",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:studio": "turbo run db:studio",
    "db:pull": "prisma pull",
    "// --- Development ---": "",
    "dev": "turbo run dev --parallel",
    "// --- TypeDoc Generation ---": "",
    "docs:api": "typedoc",
    "// --- CLI ---": "",
    "curator": "./cli/main.sh",
    "new:service": "hygen service new && pnpm install",
    "new:web-app": "hygen web-app new && pnpm install",
    "new:package": "hygen package new && pnpm install",
    "// --- Quality ---": "",
    "prepare": "husky",
    "check-types": "turbo run check-types",
    "quality:lint:check": "turbo run lint",
    "quality:lint:fix": "turbo run lint -- --fix",
    "quality:format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx,json,yaml}\"",
    "quality:format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx,json,yaml}\"",
    "// --- Storybook ---": "",
    "storybook-web:dev": "turbo run storybook-web:dev",
    "storybook-web:build": "turbo run storybook-web:build",
    "// --- Testing ---": "",
    "test:unit": "turbo run test:unit",
    "test:unit:watch": "turbo run test:unit:watch",
    "test:unit:coverage": "turbo run test:unit:coverage",
    "test:integration": "turbo run test:integration",
    "test:integration:coverage": "turbo run test:integration:coverage",
    "test:integration:watch": "turbo run test:integration:watch",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:ui": "turbo run test:e2e:ui"
  },
  "dependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "hygen": "catalog:automation",
    "vitest": "catalog:testing"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "catalog:code-quality",
    "@typescript-eslint/parser": "catalog:code-quality",
    "@vitest/coverage-v8": "catalog:testing",
    "eslint": "catalog:code-quality",
    "eslint-config-prettier": "catalog:code-quality",
    "husky": "catalog:automation",
    "lint-staged": "catalog:automation",
    "prettier": "catalog:code-quality",
    "turbo": "catalog:tooling",
    "typescript": "catalog:tooling"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,mdx,json,yaml}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@9.5.0",
  "pnpm": {
    "overrides": {
      "hono": "^4.10.2",
      "glob@10": "^10.5.0",
      "glob@11": "^11.1.0",
      "valibot": "^1.2.0",
      "esbuild": "^0.25.0",
      "dompurify": "^3.2.4",
      "body-parser": "^2.2.1",
      "js-yaml": "^4.1.1"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "turbo": {
    "team": "curator"
  }
}
