{
  "name": "curator",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest --watch",
    "test:integration": "turbo run test:integration",
    "test:contract": "turbo run test:contract",
    "quality:lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "docs:api": "typedoc",
    "dev:all": "docker compose -p curator-dev -f docker-compose.development.yml --env-file=.env.development up -d --build",
    "dev:all:stop": "docker compose -p curator-dev -f docker-compose.development.yml --env-file=.env.development down"
  },
  "dependencies": {
    "@repo/vitest-config": "workspace:*",
    "vitest": "latest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "catalog:code-quality",
    "turbo": "catalog:tooling",
    "typescript": "catalog:tooling"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=18"
  },
  "turbo": {
    "team": "curator"
  }
}
