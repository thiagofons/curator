---
import Base from "@/layouts/Base.astro";
import { humanize } from "@/lib/utils/textConverter";
import { getPayloadCategories } from "@/lib/payload";

const categories = await getPayloadCategories();
---

<Base title={"categories"}>
  <section class="section">
    <div class="container text-center">
      <h1 class="h2 mb-16">Categories</h1>
      <ul class="space-x-4">
        {
          categories.map((category) => (
            <li class="inline-block">
              <a
                href={`/blog/categories/${category.slug}`}
                class="rounded-lg bg-light px-4 py-2 text-text-dark transition hover:bg-primary hover:text-white"
              >
                &#8226; {humanize(category.data.title || "")}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Base>
