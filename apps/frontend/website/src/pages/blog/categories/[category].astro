---
import Post from "@/components/Post.astro";
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import Pagination from "@/layouts/components/Pagination.astro";
import { markdownify } from "@/lib/utils/textConverter";
// No image from static blog content; render title from Payload category
import { getPayloadCategories, getPayloadCategoryBySlug, getPayloadPostsByCategorySlug } from "@/lib/payload";
const { pagination } = config.settings;

export async function getStaticPaths() {
  const categories = await getPayloadCategories();

  return categories.map((category) => {
    return {
      params: { category: category.slug },
    };
  });
}

const { category } = Astro.params;
const posts = await getPayloadPostsByCategorySlug(category!);
const categoryObj = await getPayloadCategoryBySlug(category!);
const totalPages = Math.ceil(posts.length / pagination);
---

<Base title={categoryObj?.data.title || category}>
  <!-- Banner -->
  <section
    class="banner"
    style="background-image: url('/images/banner/banner-bg.svg')"
  >
    <div class="container">
      <div class="row">
        <div class="lg:col-6">
          <h1 set:html={markdownify(categoryObj?.data.title || category)} class="h2 mb-8" />
        </div>
      </div>
    </div>
  </section>
  <!-- ./End Banner -->

  <div class="section">
    <div class="container">
      <div class="row px-3">
        <div class="mx-auto px-0 lg:col-8">
          <h1 class="h2 mb-8">
            Posts relacionados com a categoria <span class="text-primary">{categoryObj?.data.title || category}</span>
          </h1>
          <div class="rounded px-9 py-12 shadow md:p-[60px]">
            {
              posts
                .slice(0, pagination)
                .map((post) => <Post post={post} />)
            }
            <Pagination
              section={`/blog/categories/${category}`}
              currentPage={1}
              totalPages={totalPages}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</Base>
