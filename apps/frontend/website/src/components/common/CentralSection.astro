---
import {
  H2,
  SubheadingMD,
} from "@repo/ui-web/components/custom/typography.jsx";
import { cn } from "@repo/ui-web/lib/utils";

type Props = {
  icon: (_props: any) => any;
  title: string;
  subtitle: string;
  theme?: "light" | "dark";
  bg?: (_props: any) => any;
  id: string;
};

const {
  icon: Icon,
  title,
  subtitle,
  theme = "light",
  bg: Bg,
  id,
} = Astro.props;
---

<section
  id={id}
  class={cn(
    "relative flex items-center justify-center flex-col gap-9 px-5 py-12 min-h-[80vh] lg:min-h-175 overflow-hidden",
    theme === "light" ? "bg-white" : "bg-brand-dark",
  )}
>
  {
    Bg && (
      <div class="absolute top-0 left-0 z-0">
        <Bg class="h-full w-full object-cover" />
      </div>
    )
  }
  <div class="z-10 flex items-center justify-center">
    <div
      class="flex max-w-150 flex-col items-center justify-center gap-2 text-center"
    >
      <div
        class={cn(
          "border-primary flex h-16 w-16 items-center justify-center rounded-full border-4 ",
          theme === "light" ? "bg-white" : "bg-brand-dark",
        )}
      >
        <Icon size={24} color="#0060F7" />
      </div>
      <H2 color={theme === "light" ? "black" : "white"}>{title}</H2>
      <SubheadingMD
        className="max-w-75"
        color={theme === "light" ? "gray-normal" : "gray-lighter"}
      >
        {subtitle}
      </SubheadingMD>
    </div>
  </div>

  <div class="relative">
    <slot />
  </div>
</section>
