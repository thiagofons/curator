---
import { cn } from "@repo/ui-web/lib/utils";
import { Image } from "astro:assets";
import { cva, type VariantProps } from "class-variance-authority";

import LogoDark from "@/assets/images/logo-dark.png";
import LogoLight from "@/assets/images/logo-light.png";
import LogoProDark from "@/assets/images/logo-pro-dark.png";
import LogoProLight from "@/assets/images/logo-pro-light.png";

const logoVariants = cva("w-auto object-contain", {
  variants: {
    size: {
      xs: "h-3 sm:h-4",
      sm: "h-4 sm:h-6",
      md: "h-6 sm:h-8",
      lg: "h-8 sm:h-10",
      xl: "h-10 sm:h-12",
      "2xl": "h-12 sm:h-16",
    },
  },
  defaultVariants: {
    size: "md",
  },
});

export interface Props extends VariantProps<typeof logoVariants> {
  class?: string;
  /** Override opcional. Se omitido, segue o tema do BaseLayout (classe `.dark` no html). */
  type?: "dark" | "light";
  variant?: "default" | "pro";
}

const { class: className, type, size, variant = "default" } = Astro.props;

const getImageSrc = (forcedType: "dark" | "light") => {
  if (variant === "pro")
    return forcedType === "light" ? LogoProLight : LogoProDark;
  return forcedType === "light" ? LogoLight : LogoDark;
};

const lightImage = getImageSrc("light");
const darkImage = getImageSrc("dark");

const lightClass =
  type === "dark" ? "hidden" : type === "light" ? "block" : "block dark:hidden";

const darkClass =
  type === "light" ? "hidden" : type === "dark" ? "block" : "hidden dark:block";
---

<div class={cn("flex select-none items-center gap-2", className)}>
  <Image
    src={lightImage}
    alt={variant === "pro" ? "Curator Pro" : "Curator"}
    class={cn(logoVariants({ size }), lightClass)}
    draggable="false"
    loading="eager"
    fetchpriority="high"
  />
  <Image
    src={darkImage}
    alt={variant === "pro" ? "Curator Pro" : "Curator"}
    class={cn(logoVariants({ size }), darkClass)}
    draggable="false"
    loading="eager"
    fetchpriority="high"
  />
</div>
