---
import { cn } from "@repo/ui-web/lib/utils";
import { Image } from "astro:assets";
import { cva, type VariantProps } from "class-variance-authority";

import logoDarkImg from "@/assets/images/logo-dark.png";
import logoLightImg from "@/assets/images/logo-light.png";

const logoVariants = cva("w-auto", {
  variants: {
    size: {
      xs: "h-3 sm:h-4",
      sm: "h-4 sm:h-6",
      md: "h-6 sm:h-8",
      lg: "h-8 sm:h-10",
      xl: "h-10 sm:h-12",
      "2xl": "h-12 sm:h-16",
    },
  },
  defaultVariants: {
    size: "md",
  },
});

interface Props extends VariantProps<typeof logoVariants> {
  class?: string;
  type?: "dark" | "light";
  [key: string]: any;
}

const { class: className, type = "light", size, ...props } = Astro.props;

const imageSource = type === "light" ? logoLightImg : logoDarkImg;
---

<div class={cn("flex items-center gap-2", className)} {...props}>
  <Image
    src={imageSource}
    alt="Curator"
    loading="lazy"
    class={logoVariants({ size })}
    draggable="false"
  />
</div>
