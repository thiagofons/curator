---
import { Image } from "astro:assets";
import { getSinglePage } from "@/lib/contentParser.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { render } from "astro:content";
import Post from "@/components/Post.astro";
import { CMS_BASE_URL } from "@/lib/payload";

type Props = {
  author: any;
  posts?: any[];
  isPayload?: boolean;
  contentHtml?: string;
};

const { author, posts = null, isPayload = false, contentHtml = "" } =
  Astro.props as Props;

const { title, image } = author.data || {};

const imageSrc = `${CMS_BASE_URL}/${image}`

let Content: any = null;
if (!isPayload) {
  const rendered = await render(author);
  Content = rendered.Content;
}
let filterByAuthor = posts;
if (!filterByAuthor) {
  const allPosts = await getSinglePage("posts");
  filterByAuthor = allPosts.filter((post) => post.data.authors.includes(title));
}
---

<section class="section">
  <div class="container">
    <div class="row justify-center">
      <div class="lg:col-8">
        <div class="p-12 text-center shadow">
          {
            image && (
              isPayload ? (
                <img
                  src={imageSrc}
                  class="mx-auto mb-8 rounded-full"
                  height={300}
                  width={300}
                  alt={title}
                />
              ) : (
                <Image
                  src={imageSrc}
                  class="mx-auto mb-8"
                  height={300}
                  width={300}
                  alt={title}
                />
              )
            )
          }
          <h1 set:html={markdownify(title)} class="h2 mb-8" />
          <div class="content">
            {isPayload ? <div set:html={contentHtml}></div> : <Content />}
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-16 justify-center">
      <div class="lg:col-8">
        <h2 class="mb-4">Posts de <span class="text-primary">{title}</span></h2>
        <div class="rounded py-12 px-9 shadow md:p-[60px]">
          {filterByAuthor.map((post: any) => <Post post={post} />)}
        </div>
      </div>
    </div>
  </div>
</section>
