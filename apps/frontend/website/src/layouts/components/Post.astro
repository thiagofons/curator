---
import { Image } from "astro:assets"
import { getSinglePage } from "@/lib/contentParser.astro"
import dateFormat from "@/lib/utils/dateFormat"
import { humanize, plainify, slugify } from "@/lib/utils/textConverter"

// (no explicit CollectionEntry typing to allow remote CMS data)

type Props = {
  post: any
}

const authors = await getSinglePage("authors")
const { post } = Astro.props
---

<div class="card mb-12 border-b border-border pb-8">
  {
    post.data.image && (
      <Image
        src={post.data.image}
        alt={post.data.title}
        width={445}
        height={230}
        format="webp"
        class="rounded"
      />
    )
  }

  <h3 class="h4 mt-4">
    <a
      href={`/blog/posts/${post.id}`}
      class="block font-normal text-primary hover:underline"
    >
      {post.data.title}
    </a>
  </h3>
  <ul class="mb-4 mt-1.5 flex flex-wrap items-center space-x-3 text-text-light">
    <li>
      {
        post.data.authorSlugs && post.data.authorSlugs.length > 0
          ? post.data.authors.map((name: string, i: number) => (
              <a
                href={`/blog/authors/${post.data.authorSlugs![i] || post.data.authorSlugs![0]}`}
                class="flex items-center hover:text-primary hover:underline"
              >
                <span>{name}</span>
              </a>
            ))
          : authors
              .filter((author) =>
                post.data.authors
                  .map((author: string) => slugify(author))
                  .includes(slugify(author.data.title))
              )
              .map((author) => (
                <a
                  href={`/blog/authors/${slugify(author.data.title)}`}
                  class="flex items-center hover:text-primary hover:underline"
                >
                  <span>{author.data.title}</span>
                </a>
              ))
      }
    </li>
    <li>{dateFormat(post.data.date!)}</li>
    <li>
      <ul>
        {
          post.data.categories.map((category: string, i: number) => (
            <li class="inline-block">
              <a
                href={`/blog/categories/${post.data.categorySlugs?.[i] || slugify(category)}`}
                class="mr-3 hover:text-primary hover:underline"
              >
                {humanize(category)}
              </a>
            </li>
          ))
        }
      </ul>
    </li>
  </ul>
  {
    post.body && (
      <p class="text-lg text-text line-clamp-2">{plainify(post.body)}</p>
    )
  }
  <a
    class="mt-3 inline-block border-b border-primary py-1 text-[15px] leading-[22px] text-primary"
    href={`/blog/posts/${post.id}`}>Ler Mais</a
  >
</div>
