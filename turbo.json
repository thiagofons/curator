{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "DEV",
    "PAYLOAD_SECRET",
    "DATABASE_URL",
    "FLAGSMITH_DEV_KEY",
    "FLAGSMITH_PROD_KEY",
    "DISCORD_WEBHOOK_URL",
    "LEAD_DATABASE_URL",
    "FIREBASE_AUTH_DOMAIN",
    "FIREBASE_PROJECT_ID",
    "FIREBASE_STORAGE_BUCKET",
    "FIREBASE_MESSAGING_SENDER_ID",
    "FIREBASE_APP_ID",
    "FIREBASE_MEASUREMENT_ID",
    "FIREBASE_SERVICE_ACCOUNT_KEY",
    "FIREBASE_API_KEY",
    "NODE_ENV",
    "AUTH_DATABASE_URL",
    "ROADMAP_DATABASE_URL",
    "PRISMA_TARGET"
  ],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": ["dist/**", ".next/**", "!.ext/cache/**", ".expo/**"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "dependsOn": ["^db:generate"],
      "outputs": ["src/client/**", "../shared/src/generated/**"]
    },
    "db:migrate:dev": {
      "cache": false,
      "env": ["AUTH_DATABASE_URL", "ROADMAP_DATABASE_URL", "PRISMA_TARGET"]
    },
    "db:migrate:deploy": {
      "dependsOn": ["^db:migrate:deploy"],
      "env": ["AUTH_DATABASE_URL", "ROADMAP_DATABASE_URL", "PRISMA_TARGET"]
    },
    "db:studio": {
      "dependsOn": ["^db:studio"]
    },
    "db:push:auth": {
      "cache": false
    },
    "db:push:roadmap": {
      "cache": false
    },
    "docker:build": {
      "cache": true,
      "inputs": ["Dockerfile", "../../package.json", "src/**", "public/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "quality:format:check": {
      "dependsOn": ["^quality:format:check"]
    },
    "quality:format:fix": {
      "dependsOn": ["^quality:format:fix"]
    },
    "sonar": {
      "dependsOn": ["^sonar"]
    },
    "storybook-web:dev": {},
    "storybook-web:build": {},
    "test:unit": {
      "dependsOn": ["^test:unit", "@repo/vitest-config#build"]
    },
    "test:unit:coverage": {
      "dependsOn": ["^test:unit:coverage", "@repo/vitest-config#build"]
    },
    "test:integration": {
      "dependsOn": ["^test:integration", "@repo/vitest-config#build"]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
