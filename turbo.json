{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["PAYLOAD_SECRET", "DATABASE_URI"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "quality:lint:check": {
      "dependsOn": ["^quality:lint:check"]
    },
    "quality:lint:fix": {
      "dependsOn": ["^quality:lint:fix"]
    },
    "quality:format:check": {
      "dependsOn": ["^quality:format:check"]
    },
    "quality:format:fix": {
      "dependsOn": ["^quality:format:fix"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test:unit": {
      "dependsOn": ["^test:unit", "@repo/vitest-config#build"]
    },
    "test:it": {
      "dependsOn": ["^test:it", "@repo/vitest-config#build"]
    },
    "test:e2e": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
