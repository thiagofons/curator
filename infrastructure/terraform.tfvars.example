project     = "curator"
environment = "production"

# --- Servidor ---
server_name     = "curator-prod"
server_location = "ash"   # Ashburn, EUA — mais próximo do Brasil na Hetzner
server_type     = "cx32"  # 4 vCPUs, 8GB RAM, 80GB SSD — ~€18.49/mês
open_ports      = [22, 80, 443]

# --- Credenciais (NUNCA commitar os valores reais) ---
# Passe via variáveis de ambiente para não criar um .tfvars com segredos:
#
#   export TF_VAR_hcloud_token="seu_token_aqui"
#   export TF_VAR_ssh_public_key="$(cat ~/.ssh/curator_hetzner.pub)"
#
# Ou crie um arquivo terraform.tfvars (gitignored) com:
#   hcloud_token   = "seu_token_aqui"
#   ssh_public_key = "ssh-ed25519 AAAA... curator-prod"
