{
  "extends": "@repo/typescript-config/base",
  "compilerOptions": {
    "resolveJsonModule": false,
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": false,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
