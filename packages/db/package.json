{
  "name": "@repo/db",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "db:generate": "dotenv -e ../../.env.development -- node scripts/generate-all.mjs",
    "db:migrate:dev": "dotenv -e ../../.env.development -- node scripts/migrate-dev.mjs",
    "db:migrate:deploy": "dotenv -e ../../.env.development -- node scripts/migrate-deploy.mjs",
    "db:push:auth": "prisma db push --schema=prisma/auth.prisma",
    "db:push:roadmap": "prisma db push --schema=prisma/roadmap.prisma",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest run --watch",
    "test:integration": "vitest run --exclude **/*.it.spec.ts",
    "test:integration:coverage": "vitest run --exclude **/*.it.spec.ts --coverage",
    "test:integration:watch": "vitest run --exclude **/*.it.spec.ts --watch",
    "sonar": "pnpx sonar-scanner"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "catalog:prisma7",
    "@prisma/config": "^7.4.0",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/vitest-config": "workspace:*",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "dotenv-cli": "catalog:tooling",
    "prisma": "catalog:prisma7",
    "prisma-zod-generator": "catalog:prisma7",
    "typescript": "catalog:tooling"
  },
  "exports": {
    "./auth": "./src/auth/index.ts"
  }
}
