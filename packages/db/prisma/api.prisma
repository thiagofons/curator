// -----------------------------------------------------------------------
// GENERAL CONFIGURATIONS
// -----------------------------------------------------------------------
generator client {
  provider = "prisma-client-js"
  output   = "../src/api/client"
}

generator zod {
  provider = "prisma-zod-generator"
  output   = "../../../packages/model/src/api"
}

datasource apiDb {
  provider = "postgresql"
}

// -----------------------------------------------------------------------
// ENUMS (Fixed Type Definitions)
// -----------------------------------------------------------------------

enum Role {
  USER
  MODERATOR
  ADMIN
}

enum PlanType {
  FREE
  PRO
}

// -----------------------------------------------------------------------
// DATA MODELS
// -----------------------------------------------------------------------

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String  @unique
  password String? // Hashed. Optional if using Social Auth exclusively

  // Access Control and Plans
  role  Role     @default(USER)
  plan  PlanType @default(FREE)
  isPro Boolean  @default(false) // Quick boolean flag for fast UI checks

  // Security and Auditing
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relationships
  refreshTokens RefreshToken[]
  accounts      Account[] // For Social Auth: Google, Apple, etc.

  @@map("users")
}

model RefreshToken {
  id     String @id @default(cuid())
  token  String @unique @apiDb.Text
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Security Metadata (2026 Standard)
  userAgent String? // e.g., "iPhone 15, Expo App"
  ipAddress String?
  revoked   Boolean  @default(false) // Allows remote session invalidation
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@map("refresh_tokens")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String // e.g., "google", "apple"
  providerAccountId String
  refresh_token     String? @apiDb.Text
  access_token      String? @apiDb.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @apiDb.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}
